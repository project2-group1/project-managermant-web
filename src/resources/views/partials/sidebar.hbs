                <div class="sidebar-day">
                    <p>T7</p>
                </div>
                <div class="sidebar-day">
                    <p>CN</p>
                </div>
            </div>
        </div>
        <div class="sidebar-item sidebar-studentlist">
            <button class="btn-sidebar-item">
                <i class="fa-regular fa-rectangle-list"></i>
                <a href="/list/">Danh sách sinh viên</a>
            </button>
        </div>
        <div class="sidebar-item sidebar-assignment">
            <button class="btn-sidebar-item">
                <i class="fa-solid fa-tasks-alt"></i>
                <a href="/assignment/">Bài tập</a>
            </button>
        </div>
        {{#if addMeeting}}
        <div class="sidebar-item sidebar-addMeeting">
            <button class="btn-sidebar-item">
                <i class="fa-solid fa-add"></i>
                <a href="#">Thêm cuộc gặp</a>
            </button>
        </div>
        {{/if}}
        <div class="sidebar-item sidebar-recent">
            <button class="btn-sidebar-item">
                <i class="fa-solid fa-arrow-rotate-right "></i>
                <a href="#">Mở gần đây</a>
            </button>
            <ul class="sidebar-recent-list mside-12">
            </ul>
        </div>
        <div class="sidebar-item sidebar-stored">
            <button class="btn-sidebar-item">
                <i class="fa-solid fa-box"></i>
                <a href="#">Lưu trữ</a>
            </button>
            <ul class="sidebar-stored-list mside-12">
            </ul>
        </div>
        <div class="sidebar-item sidebar-teacher">
            <button class="btn-sidebar-item">
                <i class="fa-solid fa-laptop"></i>
                <a href="#">Lịch rảnh</a>
            </button>
        </div>

