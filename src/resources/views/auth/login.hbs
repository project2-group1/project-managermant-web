<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-pic js-tilt" data-tilt>
        <img src="img\logoHUST.jpg" alt="IMG" />
      </div>

      <form action="auth/login" method="POST" class="form" id="form-2">
        <h3 class="heading">Đăng nhập</h3>
        <p class="desc">Hệ thống quản lý sinh viên làm Đồ án❤️</p>

        <div class="spacer"></div>

        <div class="form-group">
          <label for="role" class="form-label">Bạn là: </label>

          <div class="form-message">
            <input type="radio" name="role" id="giang_vien" value="giang_vien" />
            <label for="giang_vien">Giảng viên</label>
          </div>
          <div class="form-message">
            <input type="radio" name="role" id="sinh_vien" value="sinh_vien" />
            <label for="sinh_vien">Sinh viên</label>
          </div>

          <span class="form-message"></span>
        </div>
        <div class="form-group">
          <label for="id" class="form-label">Email</label>
          <input id="id" name="id" type="text" placeholder="VD: email@domain.com" class="form-control">
          <span class="form-message"></span>
        </div>

        <div class="form-group">
          <label for="password" class="form-label">Mật khẩu</label>
          <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control">
          <span class="form-message"></span>
        </div>

        <button class="form-submit">Đăng nhập</button>
      </form>

    </div>
  </div>
</div>
</div>